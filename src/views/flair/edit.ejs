<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Flair</h1>

      <form action="/topics/<%= flair.topicId %>/flair/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
          <input value="<%= flair.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="colour">Flair colour</label>
          <textarea rows="4" class="form-control" name="colour" placeholder="Enter Colour"><%= flair.colour %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>